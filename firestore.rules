rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /materials/{materialId} {
      allow get: if true;
      allow list: if request.auth != null && request.auth.token.email == 'jhelenandreat@gmail.com';
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.postedBy || (request.resource.data.solicitudes == resource.data.solicitudes + 1 && request.resource.data.status == 'Disponible'));
      allow delete: if request.auth != null && request.auth.uid == resource.data.postedBy;

      match /requests/{requestId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/materials/$(materialId)).data.postedBy == request.auth.uid;
        allow create: if true;
      }
    }
  }
}
